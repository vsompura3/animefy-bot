{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "rootDir": "src",
    "noEmitOnError": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "mapRoot": "true"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
